#reader(lib "htdp-advanced-reader.ss" "lang")((modname Euler-12) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #t #t none #f ())))
(require racket)

(define (divides? a b)
  (= (modulo a b) 0))
(check-expect (divides? 4 2) true)
(check-expect (divides? 5 3) false)

(define (get-triangles lim)
  (local [(define (loop i acc)
            (if (< i (+ lim 1))
                (loop (+ i 1)
                      (append acc (list (+ (first (take-right acc 1)) i))))
                acc))]
    (loop 2 '(1))))
(check-expect (get-triangles 10) '(1 3 6 10 15 21 28 36 45 55))

;; divisors : Number -> Number
;; Returns the divisors of a given number.
(define (divisors n)
  (filter (Î» (x) (divides? n x))
          (build-list n add1)))
(check-expect (divisors 21) '(1 3 7 21))
(check-expect (divisors 28) '(1 2 4 7 14 28))

