;; The first three lines of this file were inserted by DrRacket. They record metadata
;; about the language level of this file in a form that our tools can easily process.
#reader(lib "htdp-advanced-reader.ss" "lang")((modname Euler-17) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #t #t none #f ())))
(define (number->word n)
  (cond
    [(= n 0) ""]
    [(= n 1000) "one thousand"]
    [(< n 10) (cond
                [(= n 1) "one"]
                [(= n 2) "two"]
                [(= n 3) "three"]
                [(= n 4) "four"]
                [(= n 5) "five"]
                [(= n 6) "six"]
                [(= n 7) "seven"]
                [(= n 8) "eight"]
                [(= n 9) "nine"])]
    [(< n 20) (cond
                [(= n 10) "ten"]
                [(= n 11) "eleven"]
                [(= n 12) "twelve"]
                [(= n 13) "thirteen"]
                [(= n 15) "fifteen"]
                [(= n 18) "eighteen"]
                [else (string-append (number->word (modulo n 10))
                                     "teen")])]
    [(< 19 n 100) (cond
                 [(= n 20) "twenty"]
                 [(= n 30) "thirty"]
                 [(= n 40) "forty"]
                 [(= n 50) "fifty"]
                 [(zero? (modulo n 10)) (string-append (number->word (floor (/ n 10)))
                                                       "ty")]
                 [else (string-append (number->word (- n (modulo n 10))]
                 )]

    [(< 20 n 30) (string-append "twenty-" (number->word (modulo n 20)))]
    [(< 30 n 40) (string-append "thirty-" (number->word (modulo n 30)))]
    [(< 40 n 50) (string-append "forty-" (number->word (modulo n 40)))]
    [
    ))
(check-expect (number->word 17) "seventeen")
(check-expect (number->word 28) "twenty-eight")